{{! Partial for a single post }}
<div class="post">
    <div class="post-avatar">
        <!-- the user's avatar -->
    </div>
    <div class="post-content preserve-newlines">
        <!-- the post -->

        <strong class="title">{{title}}</strong>
        <br>
        {{content}}
        <div class="post-status-bar">
            <!-- everything that is shown in the status bar -->
            
            {{#ifCond username user.username}}
                 <button class="delete-button" type='button' onclick="handleDeleteClick()"><i class="fas fa-trash-alt"></i></button>
            {{else}}
                <button class="like-button" type='button' onclick="handleLikeClick()">â™¥</button>
            {{/ifCond}}
            
            {{likes}} Likes Posted by {{username}} on {{timestamp}}

        </div>        
    </div>
</div>
<script>

    function handleLikeClick(event) {
        console.log(event);
        const buttonElement = event.target.closest('.like-button');
        const postId = buttonElement.getAttribute('data-id');

        // you might want to "fetch" something...
        fetch('/like/:id', {
            method: "POST",
            body: JSON.stringify(postId)})
        .then(res => res.text())
        .then(body=>{console.log(body);})
        .catch(err => {console.error('error: ', err);});

    }

    function handleDeleteClick(event) {
        const buttonElement = event.target.closest('.delete-button');
        const postId = buttonElement.getAttribute('data-id');

        // you might want to "fetch" something...
        fetch('/delete/:id', {
            method: "POST",
            headers: {"Content-Type" : 'application/x-www-form-urlencoded',},
            body: JSON.stringify(postId)
            })
        .then((res) => res.text())
        .then((body)=>{console.log(body);})
        .catch((err) => {console.error('error: ', error);});
    }    
</script>