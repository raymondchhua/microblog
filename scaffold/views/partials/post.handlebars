{{! Partial for a single post }}
<div class="post">
    <div class="post-avatar">
        <!-- the user's avatar -->
    </div>
    <div class="post-content preserve-newlines">
        <!-- the post -->

        <div id="title"><strong>{{title}}</strong></div>
        <div id="content">{{content}}</div>
        <div class="post-status-bar">
            <!-- everything that is shown in the status bar -->
            
            {{#ifCond username user.username}}
                 <button class="delete-button" data-id="{{id}}" type='button' onclick="handleDeleteClick(this)"><i class="fas fa-trash-alt"></i></button>
            {{else}}
                <button class="like-button" data-id="{{id}}" type='button' onclick="handleLikeClick(this)">â™¥</button>
            {{/ifCond}}
            
            <div id='likes'>{{likes}} Likes</div>
            <div id='origin'>Posted by {{username}} on {{timestamp}}</div>

        </div>        
    </div>
</div>
<script>

    function handleLikeClick(event) {
        const postId = event.getAttribute('data-id');
        // you might want to "fetch" something...
        let data = {id:postId};
        console.log(event);
        fetch('/like/:id', {
            method: "POST",
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
            })
        .then(res => res.json())
        .then((body)=>{
            if (body.likes) {
                const likes = document.getElementById('likes');
                console.log(likes);
                console.log(likes.textContent);
                const currLikes = parseInt(likes.textContent);
                if (parseInt(body.likes) == 1) {
                    likes.textContent = ""+(currLikes+1)+" Likes"; 
                } else {
                    likes.textContent = ""+(currLikes-1)+" Likes";
                }
            } else if (body.redirect) {
                window.location.assign(body.redirect);
            }
        })
        .catch(err => {console.error('error: ', err);});

    }

    function handleDeleteClick(event) {
        const postId = event.getAttribute('data-id');

        // you might want to "fetch" something...
        let data = {id:postId};

        fetch('/delete/:id', {
            method: "POST",
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
            })
        .then((res) => res.json())
        .then((body)=>{console.log(body);})
        .catch((err) => {console.error('error: ', err);});
    }    
</script>